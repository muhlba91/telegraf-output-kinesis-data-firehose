{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":semanticCommitTypeAll(chore)"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "baseBranches": [
        "main"
    ],
    "enabledManagers": [
        "github-actions",
        "gomod"
    ],
    "github-actions": {
        "managerFilePatterns": [
            "/^(workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$/",
            "/(^|/)action\\.ya?ml$/"
        ]
    },
    "gomod": {
        "managerFilePatterns": [
            "/(^|/)go\\.mod$/"
        ]
    }
}
